{
	"license"           : "GPL-2.0-or-later",
	"name"              : "clevercanyon/php-js-utilities-dev-npm",
	"description"       : "Intended for internal company use only. CLEVER CANYON's dev utilities are for PHP/JS development.",
	"authors"           : [
		{
			"name"     : "CLEVER CANYON",
			"homepage" : "https://clevercanyon.com",
			"role"     : "organization"
		}
	],
	"prefer-stable"     : true,
	"minimum-stability" : "dev",
	"config"            : {
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/package-versions-deprecated": true
		}
	},
	"require"           : {
		"clevercanyon/php-js-utilities-dev" : "dev-main"
	},
	"autoload"          : {
		"psr-4" : {
			"Clever_Canyon\\Utilities_Dev_NPM\\" : "./src/classes"
		}
	},
	"autoload-dev"      : {
		"psr-4" : {
			"Clever_Canyon\\Utilities_Dev_NPM__Tests\\" : "./tests/classes"
		}
	},
	"scripts"           : {
		"post-update-cmd"   : [
			"[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/clevercanyon/php-js-utilities-dev/src/toolchain/composer/post-update-cmd.php"
		],
		"run-project-tests" : [
			"./vendor/bin/phpunit --configuration ./.phpunit.xml --testsuite tests"
		]
	},
	"extra"             : {
		"clevercanyon" : {
			"$extends-packages" : [ "clevercanyon/php-js-utilities-dev" ]
		}
	}
}
